<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <EditText
            android:id="@+id/editTextUserNameRegister"
            android:layout_width="600sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="User Name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextEmailRegister"
            android:layout_width="600sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextUserNameRegister"
            android:layout_below="@+id/editTextUserNameRegister"
            android:layout_marginTop="39dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="25sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTextAddressRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextPhoneRegister"
            android:layout_alignRight="@+id/editTextPhoneRegister"
            android:layout_below="@+id/editTextPhoneRegister"
            android:layout_marginTop="39dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextPhoneRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextEmailRegister"
            android:layout_alignRight="@+id/editTextEmailRegister"
            android:layout_below="@+id/editTextEmailRegister"
            android:layout_marginTop="40dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextAddressRegister"
            android:layout_alignRight="@+id/editTextAddressRegister"
            android:layout_below="@+id/editTextAddressRegister"
            android:layout_marginTop="47dp"
            android:background="@drawable/card_item"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonRegisterRegistration"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_below="@+id/editTextPassword"
            android:layout_marginTop="73dp"
            android:background="@drawable/button"
            android:text="Register"
            android:textColor="#DEDEDE"
            android:textSize="25sp" />
    </RelativeLayout>

</ScrollView>