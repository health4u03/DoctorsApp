<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Registration" >

    <EditText
        android:id="@+id/editTextUserNameRegister"
        android:layout_width="600sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/card_item"
        android:ems="10"
        android:hint="User Name"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextEmailRegister"
        android:layout_width="600sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextUserNameRegister"
        
        android:background="@drawable/card_item"
        android:layout_below="@+id/editTextUserNameRegister"
        
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Email"
        android:textSize="25sp"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextAddressRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextPhoneRegister"
        android:layout_alignRight="@+id/editTextPhoneRegister"
        android:layout_below="@+id/editTextPhoneRegister"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:textSize="25sp"
        
        android:background="@drawable/card_item"
        android:hint="Address"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editTextPhoneRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEmailRegister"
        android:layout_alignRight="@+id/editTextEmailRegister"
        android:layout_below="@+id/editTextEmailRegister"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:background="@drawable/card_item"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextAddressRegister"
        android:layout_alignRight="@+id/editTextAddressRegister"
        android:layout_below="@+id/editTextAddressRegister"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Password"
        android:textSize="25sp"
        android:background="@drawable/card_item"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonRegisterRegistration"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="73dp"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#DEDEDE"
        android:text="Register" />

</RelativeLayout>
