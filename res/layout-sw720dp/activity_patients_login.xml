<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editTextPatientsUserName"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:background="@drawable/transparent_rectangle"
            android:ems="10"
            android:hint="Patients Login"
            android:padding="25sp"
            android:textSize="25sp" >
        </EditText>

        <Button
            android:id="@+id/buttonFindPatient"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="121dp"
            android:background="@drawable/button_states"
            android:padding="25sp"
            android:text="Find"
			android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonAddNewPatient"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_states"
            android:padding="25sp"
			android:textColor="@android:color/white"
            android:text="Add new patient"
            android:textSize="25sp" />
    </LinearLayout>

</ScrollView>