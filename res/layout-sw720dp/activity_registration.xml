<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <com.example.dh.FloatLabelLayout
            android:id="@+id/editTextUserNameRegisterLayout"
            android:layout_width="500sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

            <EditText
                android:id="@+id/editTextUserNameRegister"
                android:layout_width="500sp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_rectangle"
                android:ems="10"
                android:hint="User Name"
                android:padding="25sp"
                android:textColorHint="#006EFF"
                android:textSize="25sp" >
            </EditText>
        </com.example.dh.FloatLabelLayout>

        <com.example.dh.FloatLabelLayout
            android:id="@+id/editTextEmailRegisterLayout"
            android:layout_width="500sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextUserNameRegisterLayout"
            android:layout_below="@+id/editTextUserNameRegisterLayout"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

            <EditText
                android:id="@+id/editTextEmailRegister"
                android:layout_width="500sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_rectangle"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="25sp"
                android:textColorHint="#006EFF"
                android:textSize="25sp" >
            </EditText>
        </com.example.dh.FloatLabelLayout>

        <com.example.dh.FloatLabelLayout
            android:id="@+id/editTextAddressRegisterLayout"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextEmailRegisterLayout"
            android:layout_alignRight="@+id/editTextEmailRegisterLayout"
            android:layout_below="@+id/editTextEmailRegisterLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

            <EditText
                android:id="@+id/editTextAddressRegister"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_rectangle"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="25sp"
                android:textColorHint="#006EFF"
                android:textSize="25sp" />
        </com.example.dh.FloatLabelLayout>

        <com.example.dh.FloatLabelLayout
            android:id="@+id/editTextPhoneRegisterLayout"
            android:layout_width="500sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextAddressRegisterLayout"
            android:layout_alignRight="@+id/editTextAddressRegisterLayout"
            android:layout_below="@+id/editTextAddressRegisterLayout"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

            <EditText
                android:id="@+id/editTextPhoneRegister"
                android:layout_width="500sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_rectangle"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="25sp"
                android:textColorHint="#006EFF"
                android:textSize="25sp" />
        </com.example.dh.FloatLabelLayout>

        <com.example.dh.FloatLabelLayout
            android:id="@+id/editTextPasswordLayout"
            android:layout_width="500sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextPhoneRegisterLayout"
            android:layout_alignRight="@+id/editTextPhoneRegisterLayout"
            android:layout_below="@+id/editTextPhoneRegisterLayout"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.YourApp.FloatLabel" >

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="500sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_rectangle"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="25sp"
                android:textColorHint="#006EFF"
                android:textSize="25sp" />
        </com.example.dh.FloatLabelLayout>

        <Button
            android:id="@+id/buttonRegisterRegistration"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/editTextPasswordLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_states"
            android:padding="25sp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </RelativeLayout>

</ScrollView>