<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registration" >

    <EditText
        android:id="@+id/editTextUserNameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/currencyconvertereditext"
        android:drawableLeft="@drawable/male80"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="User Name"
        android:padding="15dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/currencyconvertereditext"
        android:drawableLeft="@drawable/envelope4_2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="20sp" >
    </EditText>

    <EditText
        android:id="@+id/editTextAddressRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/currencyconvertereditext"
        android:drawableLeft="@drawable/pins9"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:padding="15dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPhoneRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/currencyconvertereditext"
        android:drawableLeft="@drawable/phone16"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="15dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/currencyconvertereditext"
        android:drawableLeft="@drawable/key162_1"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="I accept terms and conditions"
        android:textColor="#3498db"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonRegisterRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_states_signup"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

</LinearLayout>