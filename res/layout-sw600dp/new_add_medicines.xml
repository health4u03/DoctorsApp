<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewMedicineCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/editTextAddMedicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/currencyconvertereditext"
            android:ems="10"
            android:focusable="true"
            android:hint="Enter Medicine Name"
            android:padding="8dp" >
        </AutoCompleteTextView>

        <CheckBox
            android:id="@+id/checkBoxMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="M" />

        <CheckBox
            android:id="@+id/checkBoxAfternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A" />

        <CheckBox
            android:id="@+id/checkBoxEvening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E" />

        <CheckBox
            android:id="@+id/checkBoxNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N" />

        <ToggleButton
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_states_parameter"
            android:textColor="@android:color/white"
            android:textOff="Done"
            android:textOn="Edit" />
    </LinearLayout>

</LinearLayout>