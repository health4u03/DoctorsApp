<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dh.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.dh.Login"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dh.AddPatient"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
         <activity
            android:name="com.example.dh.ForgotPassword"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="portrait"
        >
        </activity>
        <activity
            android:name="com.example.dh.Final_new_Prescription"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dh.Registration"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="com.example.dh.DoctorsProfile"
            android:label="@string/title_activity_doctors_profile"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dh.PatientsLogin"
            android:label="@string/title_activity_patients_login"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dh.PatientsProfile"
            android:label="@string/title_activity_patients_profile"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.dh.Update_Running_disease"
            android:label="@string/title_activity_update__running_disease"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dh.Add_medicines_to_clinic"
            android:label="@string/title_activity_add_medicines_to_clinic"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dh.Final_prescription"
            android:label="@string/title_activity_prescription"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.dh.Parameters"
            android:label="@string/title_activity_paramters"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.dh.Tests"
            android:label="@string/title_activity_tests"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.dh.Medicines"
            android:label="@string/title_activity_medicines"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.dh.Disease_Diagnosed"
            android:label="@string/title_activity_disease_diagnosed"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.dh.Symptoms"
            android:label="@string/title_activity_symptoms"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dh.Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
        <activity
            android:name="com.example.dh.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>